<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="@dimen/dimen_title_height"
        android:layout_height="@dimen/dimen_title_height"
        android:src="@drawable/title_back" />

    <TextView
        android:id="@+id/tv_title_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="夏洛特烦恼"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_text_main" />

    <ImageView
        android:id="@+id/iv_title_search"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginRight="@dimen/dimen_margin"
        android:src="@drawable/title_search"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_more"
        android:layout_width="@dimen/dimen_title_height"
        android:layout_height="@dimen/dimen_title_height"
        android:src="@drawable/title_more" />
</merge>